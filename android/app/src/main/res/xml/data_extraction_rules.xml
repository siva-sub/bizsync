<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from cloud backup -->
        <exclude domain="file" path="keys/" />
        <exclude domain="file" path="secure/" />
        <exclude domain="database" path="bizsync.db" />
        <exclude domain="database" path="bizsync.db-shm" />
        <exclude domain="database" path="bizsync.db-wal" />
        <exclude domain="sharedpref" path="auth_prefs.xml" />
        <exclude domain="sharedpref" path="security_prefs.xml" />
        
        <!-- Include business-critical but non-sensitive data -->
        <include domain="sharedpref" path="app_preferences.xml" />
        <include domain="file" path="exports/" />
        <include domain="file" path="templates/" />
    </cloud-backup>
    
    <device-transfer>
        <!-- Allow transfer of app settings but not sensitive data -->
        <include domain="sharedpref" path="app_preferences.xml" />
        <include domain="file" path="templates/" />
        
        <!-- Exclude all sensitive data from device transfer -->
        <exclude domain="file" path="keys/" />
        <exclude domain="file" path="secure/" />
        <exclude domain="database" path="bizsync.db" />
        <exclude domain="sharedpref" path="auth_prefs.xml" />
        <exclude domain="sharedpref" path="security_prefs.xml" />
    </device-transfer>
</data-extraction-rules>